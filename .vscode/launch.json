{
  "configurations": [
    {
      "name": "Python Debugger: FastAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["api.main:app", "--reload", "--host", "0.0.0.0", "--port", "8000"],
      "cwd": "${workspaceFolder}",
      "jinja": true,
      "env": {
        "PYDEVD_WARN_EVALUATION_TIMEOUT": "60"
      }
    }
  ]
}
